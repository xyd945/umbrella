{
  "name": "umbrella",
  "version": "1.0.0",
  "description": "Umbrella Security Scanner - AI-powered website security analysis",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "build:extension": "cd packages/extension && npm run build",
    "dev:extension": "cd packages/extension && npm run dev",
    "build:backend": "cd packages/backend && npm run build",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:backend\"",
    "build": "npm run build:extension && npm run build:backend",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap"
  },
  "keywords": [
    "security",
    "ai",
    "chrome-extension",
    "scanner"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "lerna": "^6.4.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}